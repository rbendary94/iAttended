<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Current Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:text=" Course Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_student_courseName"
        android:id="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/bt_ta_endSession"
        android:layout_toStartOf="@+id/bt_ta_endSession"
        android:layout_alignTop="@+id/tv_student_courseName"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <TextView
        android:text="Course Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_student_courseName"
        android:layout_marginTop="58dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:text="Duration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/textView19"
        android:layout_toLeftOf="@+id/tv_st_counter"
        android:layout_toStartOf="@+id/tv_st_counter"
        android:layout_alignTop="@+id/tv_st_counter"
        android:layout_alignBottom="@+id/tv_st_counter"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_st_counter"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/tv_student_courseName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <Button
        android:text="End Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_ta_endSession"
        android:layout_below="@+id/tv_st_counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

</RelativeLayout>
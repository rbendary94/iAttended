<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_password"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_toLeftOf="@+id/txt_signup_password"
        android:layout_toStartOf="@+id/txt_signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/txt_signup_password"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_password"
        android:layout_alignBottom="@+id/signup_password"
        android:layout_alignLeft="@+id/txt_signup_email"
        android:layout_alignStart="@+id/txt_signup_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textStyle="normal|bold"
        android:textSize="18sp"

        android:id="@+id/signup_ID"
        android:layout_below="@+id/signup_confirm_password"
        android:layout_alignLeft="@+id/signup_confirm_password"
        android:layout_alignStart="@+id/signup_confirm_password"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/signup_confirm_password"
        android:layout_alignEnd="@+id/signup_confirm_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Confirm Password"
        android:ems="10"
        android:id="@+id/txt_signup_confirm_password"
        android:background="@android:color/background_light"
        android:layout_above="@+id/signup_ID"
        android:layout_alignLeft="@+id/txt_signup_password"
        android:layout_alignStart="@+id/txt_signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/txt_signup_email"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_email"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_email"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_signup_email"
        android:layout_toStartOf="@+id/txt_signup_email"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_confirm_password"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/signup_password"
        android:layout_toLeftOf="@+id/txt_signup_confirm_password"
        android:layout_alignLeft="@+id/signup_password"
        android:layout_alignStart="@+id/signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789-"
        android:ems="10"
        android:id="@+id/txt_signup_id"
        android:hint="xx-xxxx"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_ID"
        android:layout_alignBottom="@+id/signup_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/signup_ID"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name:"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_username"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="username"
        android:ems="10"
        android:id="@+id/txt_signup_username"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_username"
        android:layout_alignBottom="@+id/signup_username"
        android:layout_alignRight="@+id/txt_signup_id"
        android:layout_alignEnd="@+id/txt_signup_id"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_email"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/signup_username"
        android:layout_alignLeft="@+id/signup_username"
        android:layout_alignStart="@+id/signup_username"
        android:layout_alignRight="@+id/signup_username"
        android:layout_alignEnd="@+id/signup_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:id="@+id/txt_signup_email"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_email"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_alignLeft="@+id/txt_signup_username"
        android:layout_alignStart="@+id/txt_signup_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_password"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="GUC Email"
        android:ems="10"
        android:id="@+id/txt_signup_password"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/signup_password"
        android:layout_alignBottom="@+id/signup_password"
        android:layout_alignLeft="@+id/txt_signup_email"
        android:layout_alignStart="@+id/txt_signup_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textStyle="normal|bold"
        android:textSize="18sp"

        android:id="@+id/signup_ID"
        android:layout_below="@+id/signup_confirm_password"
        android:layout_alignLeft="@+id/signup_confirm_password"
        android:layout_alignStart="@+id/signup_confirm_password"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/signup_confirm_password"
        android:layout_alignEnd="@+id/signup_confirm_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/signup_confirm_password"
        android:layout_below="@+id/signup_password"
        android:layout_alignLeft="@+id/signup_password"
        android:layout_alignStart="@+id/signup_password"
        android:layout_marginTop="28dp"
        android:layout_alignRight="@+id/signup_password"
        android:layout_alignEnd="@+id/signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Confirm Password"
        android:ems="10"
        android:id="@+id/txt_signup_confirm_password"
        android:background="@android:color/background_light"
        android:layout_above="@+id/signup_ID"
        android:layout_alignLeft="@+id/txt_signup_password"
        android:layout_alignStart="@+id/txt_signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_signup_id"
        android:text="xx-xxxx"
        android:background="@android:color/background_light"


        android:layout_alignBaseline="@+id/signup_ID"
        android:layout_alignBottom="@+id/signup_ID"
        android:layout_alignLeft="@+id/btn_signup"
        android:layout_alignStart="@+id/btn_signup" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/txt_signup_id"
        android:layout_toRightOf="@+id/signup_ID"
        android:layout_toEndOf="@+id/signup_ID"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>
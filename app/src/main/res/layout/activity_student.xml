<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:text="Tutorial Nr. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_student_tutorial_nr"
        android:layout_marginTop="57dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/tv_student_courseName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_st_counter"
        android:layout_marginTop="59dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/tv_student_tutorial_nr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_student_endSession"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp" />

    <TextView
        android:text="Course Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_alignBottom="@+id/tv_student_tutorial_nr"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/tv_student_tutorial_nr"
        android:layout_toLeftOf="@+id/tv_student_tutorial_nr"
        android:layout_toStartOf="@+id/tv_student_tutorial_nr"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Course Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_toLeftOf="@+id/tv_student_tutorial_nr"
        android:layout_toStartOf="@+id/tv_student_tutorial_nr"
        android:layout_alignTop="@+id/tv_st_counter"
        android:layout_alignBottom="@+id/tv_st_counter"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Current Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Course Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_student_courseName"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Course Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/tv_student_tutorial_nr"
        android:layout_toLeftOf="@+id/bt_student_endSession"
        android:layout_toStartOf="@+id/bt_student_endSession"
        android:layout_alignTop="@+id/tv_student_courseName" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Course Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/tv_student_courseName"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/txt_ta_courseName"
        android:layout_toStartOf="@+id/txt_ta_courseName"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Room Nr.:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ta_courseName"
        android:layout_alignLeft="@+id/tv_student_courseName"
        android:layout_alignStart="@+id/tv_student_courseName"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_ta_roomNr"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_toLeftOf="@+id/txt_ta_roomNr"
        android:layout_toStartOf="@+id/txt_ta_roomNr"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Start Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="113dp"
        android:id="@+id/bt_startsession"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Tutorial 5"
        android:ems="10"
        android:id="@+id/txt_ta_tutorialNr"
        android:layout_alignBaseline="@+id/tv_ta_tutorialNr"
        android:layout_alignBottom="@+id/tv_ta_tutorialNr"
        android:layout_alignLeft="@+id/txt_ta_roomNr"
        android:layout_alignStart="@+id/txt_ta_roomNr" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_ta_roomNr"
        android:hint="C5.101"
        android:layout_below="@+id/txt_ta_courseName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_ta_courseName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignBaseline="@+id/tv_student_courseName"
        android:layout_alignBottom="@+id/tv_student_courseName"
        android:layout_alignLeft="@+id/txt_ta_roomNr"
        android:layout_alignStart="@+id/txt_ta_roomNr"
        android:hint="CSEN101"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <TextView
        android:text="Tutorial Nr.: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_ta_tutorialNr"
        android:layout_below="@+id/txt_ta_roomNr"
        android:layout_alignLeft="@+id/tv_ta_roomNr"
        android:layout_alignStart="@+id/tv_ta_roomNr"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_toLeftOf="@+id/txt_ta_tutorialNr"
        android:layout_toStartOf="@+id/txt_ta_tutorialNr"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

</RelativeLayout>